<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.led_on_off.led.ledControl"
    android:background="#212121">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="THCS Quang Trung"
        android:textColor="#f44336"
        android:textSize="23dp" />


    <Button
        android:id="@+id/hand_control"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="225dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text=" On/Off Light"
        android:textColor="#212121"
        android:textSize="30sp"
        tools:text=" On/Off Light"
        tools:typeface="monospace" />

    <Button
        android:id="@+id/alarm"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Alarm"
        android:textColor="#212121"
        android:textSize="30sp"
        tools:text="Alarm"
        tools:typeface="monospace" />

    <Button
        android:id="@+id/change_mode"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Change Mode"
        android:textColor="#212121"
        android:textSize="30sp"
        tools:text="Change Mode"
        tools:typeface="monospace" />

    <Button
        android:id="@+id/change_sensor"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Change Sensor"
        android:textColor="#212121"
        android:textSize="30sp"
        tools:text="Change Sensor"
        tools:typeface="monospace" />

    <Button
        android:id="@+id/dis_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="DISCONNECT"
        android:textColor="#212121"
        android:textSize="20sp"
        tools:text="DISCONNECT"
        tools:typeface="monospace" />

    <Button
        android:id="@+id/abt_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dis_btn"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="ABOUT"
        android:textColor="#212121"
        android:textSize="20sp"
        tools:text="ABOUT"
        tools:typeface="monospace" />


</RelativeLayout>
